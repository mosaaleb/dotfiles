snippet webpack-views
const chokidar = require("chokidar");

environment.config.devServer.before = (app, server) => {
  chokidar
    .watch([
      "app/views/**/*.erb",
      "config/locales/*.yml",
      "app/components/**/*.{erb,scss}"
    ]).on("change", () => server.sockWrite(server.sockets, "content-changed"));
};
endsnippet
