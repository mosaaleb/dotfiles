snippet rubocop-ext
require:
  - rubocop-rake
  - rubocop-rails
  - rubocop-rspec
  - rubocop-performance
endsnippet

snippet rubocop-plugin
require:
  - rubocop-minitest
  - rubocop-rake

AllCops:
  Exclude:
    - "bin/*"
    - "Guardfile"
    - "Rakefile"
    - "${1:gemname}.gemspec"

  DisplayCopNames: true

Layout/LineLength:
  Max: 80
  IgnoredPatterns: ['^\s*#']

Layout/FirstHashElementIndentation:
  EnforcedStyle: consistent

Layout/FirstArrayElementIndentation:
  EnforcedStyle: consistent

Metrics/BlockLength:
  Exclude:
    - 'Rakefile'
    - '**/*.rake'
    - 'spec/**/*.rb'

Style/Documentation:
  Enabled: false

Style/ClassAndModuleChildren:
  Enabled: false

Metrics/AbcSize:
  Enabled: false

Style/HashEachMethods:
  Enabled: true

Style/HashTransformKeys:
  Enabled: true

Style/HashTransformValues:
  Enabled: true

Style/FrozenStringLiteralComment:
  Safe: true
  SafeAutoCorrect: true
endsnippet

